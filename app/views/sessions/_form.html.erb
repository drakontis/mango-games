<%= form_tag login_path, :role => "form", :class => 'form-horizontal' do %>
    <fieldset>
      <legend>Please Log In </legend>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="username">Username</label>
        <div class="col-sm-3">
          <%= text_field_tag :username, params[:username], :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="password">Password</label>
        <div class="col-sm-3">
          <%= password_field_tag :password, params[:password], :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <%= submit_tag "Login", :class => 'btn btn-success' %>
      </div>
      </div>
    </fieldset>
<% end %>