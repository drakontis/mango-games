<table class='table table-striped'>
  <thead>
  <th>Title</th>
  <th>Description</th>
  <th>User</th>
  </thead>

  <tbody>
  <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.title, game_path(game) %></td>
        <td><%= game.description[0..100] %></td>
        <td><%= game.user.username %></td>
      </tr>
  <% end %>
  </tbody>
</table>