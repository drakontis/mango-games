<%= link_to 'New Rank', new_rank_path %>

<table class='table table-striped'>
  <thead>
  <th>Id</th>
  <th>Code</th>
  <th>Name</th>
  <th></th>
  </thead>

  <tbody>
  <% @ranks.each do |rank| %>
      <tr>
        <td><%= rank.id %></td>
        <td><%= rank.code %></td>
        <td><%= rank.name %></td>
        <td><%= link_to 'Edit', edit_rank_path(rank), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', rank_path(rank), :method => :delete, :class => 'btn btn-danger' %></td>
      </tr>
  <% end %>
  </tbody>
</table>