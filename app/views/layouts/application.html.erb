<!DOCTYPE html>
<html>
<head>
  <title>Games</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="#">Games</a>
    <ul class="nav">

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Ranks
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'New rank', new_rank_path %></li>
          <li><%= link_to 'All ranks', ranks_path %></li>
        </ul>
      </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Categories
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'New category', new_category_path %></li>
          <li><%= link_to 'All categories', categories_path %></li>
        </ul>
      </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Users
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'New user', new_user_path %></li>
          <li><%= link_to 'All users', users_path %></li>
        </ul>
      </li>

      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          Games
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'New game', new_game_path %></li>
          <li><%= link_to 'All games', games_path %></li>
          <li><%= link_to 'Not approved Games', not_approved_games_path %></li>
        </ul>
      </li>

      <li>
        <% if session[:user_id].nil? %>
            <%= link_to 'Login', login_path %>
        <% else %>
            <%= link_to 'Logout', logout_path, :method => :delete %>
        <% end %>
      </li>
    </ul>
  </div>
</div>

<div class="container-fluid client-area">

  <div class="row-fluid">
    <div class="span3">
     Hello world!
    </div>
    <div class="span6">
      <div id="flash_div">
        <% flash.each do |name, msg| %>
            <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
              <a class="close" data-dismiss="alert">x</a>
              <%= msg  %>
            </div>
        <% end %>
      </div>
      <%=  yield %>
    </div>
    <div class="span3">
      Hello again!
    </div>
  </div>
</div>


</body>
</html>
